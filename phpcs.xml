<?xml version="1.0"?>
<ruleset name="Standard">
    <description>PSR2 Coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg value="n"/>
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <file>src/</file>
    <exclude-pattern>*/test/*</exclude-pattern>
</ruleset>